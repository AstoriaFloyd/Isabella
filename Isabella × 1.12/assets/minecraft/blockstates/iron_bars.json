{
    "multipart": [
        {   "apply": { "model": "iron_bars_post" }},
        {   "when": { "north": true },
            "apply": { "model": "iron_bars_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "iron_bars_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "iron_bars_side", "y": 180 }
        },
        {   "when": { "west": true },
            "apply": { "model": "iron_bars_side", "y": 270 }
        }
    ]
}
